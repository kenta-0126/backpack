.top {
  background-image: url("<%= asset_path ('top.jpg') %>") ;
  background-size: cover ;
  background-position: center top ;
  background-repeat: no-repeat ;
  min-height: 85vh ;
}

.top_content {
  text-align: center ;
}

.title {
  font-size: 5rem ;
  margin-top: 50px ; 
}

.top_button {
  
}

.button {
  font-size: 1.375rem ;
  background: #0bd ;
  color: #fff ;
  border-radius: 5px ;
  padding: 18px 32px ;
  margin-left: 40px ;
}

.button:hover {
  background: #0090aa ;
}



.about_content {
  background-image: url("<%= asset_path ('about.jpg') %>") ;
  background-size: cover ;
  background-position: center top ;
  background-repeat: no-repeat ;
  min-height: 85vh ;
  text-align: center ;

}

.about_text {
  font-size: 1.125rem ;
  margin: 10px 0 42px ;
  color: white ;
}

.about_title {
  font-size: 5rem ;
  color: white ;
}
