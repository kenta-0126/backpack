
      <div class="event_box">

         <h2><%= event.title %></h2>
          <% if event_items.any? %>
           <table>
             <tr>
             <% genres.each do |genre| %>
                <th><%= genre.name %></th>
                  <% genre.event_items.each do |item| %>
                  <td>
                    <%= check_box_tag :item %>
                    <%= item.name %>
                  </td>
                  <% end %>
               <% end %>
          <% elsif %>
            <div>荷物が追加されていません</div>
          <% end %>
            </tr>
          </table>



      </div>