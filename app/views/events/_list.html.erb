
      <div class="event_box">
        <h2><%= event.title%></h2>
        <table>
          <tr>
            <% genres.each do |genre| %>
              <th><%= genre.name %></th>

              <% genre.items.each do |item| %>
              <td><%= item.name %></td>
              <% end %>
            <% end %>
          </tr>
        </table>
      </div>