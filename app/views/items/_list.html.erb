
<div class="item_box">
　<h3  class="item_title">アイテム一覧</h3>
    <div>

       <% items.each do |item| %>
       <% if items.any? %>
        <li><%= link_to item.name, item_path(item), :method => :put, params: {event_id: @event.id}, class: "item_update" %></li>
       <% else %>
       <li><%= item.name %></li>
       <% end %>
      <% end %>
    </div>
</div>